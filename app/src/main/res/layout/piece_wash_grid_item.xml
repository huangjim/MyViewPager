<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp" android:layout_height="wrap_content">
    <LinearLayout

        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/piece_grid_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/basket_list_item_img01"
            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="#ededed"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/piece_grid_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T恤"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/piece_grid_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/yuan"
            android:text="8"
            android:textSize="25sp"
            android:textColor="#ff4d0f"/>

    </LinearLayout>

</RelativeLayout>