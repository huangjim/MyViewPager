    <FrameLayout

        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/write_location1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户信息"
                android:textSize="20sp"
                android:layout_marginLeft="@dimen/DIMEN_20PX"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="填写"
                android:textSize="20sp"
                android:drawableRight="@drawable/frag_basket_img02"
                android:drawablePadding="10dp"/>

        </RelativeLayout>
        <RelativeLayout

            android:background="@color/color_white"
            android:id="@+id/have_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/DIMEN_20PX"
            >

            <LinearLayout

                android:id="@+id/layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/DIMEN_30PX"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:src="@drawable/image_name" />

                <TextView
                    android:id="@+id/userinfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="黄先生"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="@dimen/DIMEN_30PX"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:src="@drawable/image_phone" />

                <TextView
                    android:id="@+id/userinfo_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="13246724187"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_name"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/DIMEN_30PX"
                    android:layout_height="@dimen/DIMEN_50PX"
                    android:src="@drawable/image_location" />

                <TextView
                    android:id="@+id/userinfo_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="青羊区，南大街"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/DIMEN_200PX"
                android:layout_toRightOf="@id/layout_name"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/frag_basket_img02" />

        </RelativeLayout>
    </FrameLayout>

</LinearLayout>